<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refreshMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.MainFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/vannerImage1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/vanner_image1" />

            <ImageButton
                android:id="@+id/vannerImage2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/vanner_image2" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/vanner_image3" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/vanner_image4" />
        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>